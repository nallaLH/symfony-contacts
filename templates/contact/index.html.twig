{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}

    <h1>Liste des contacts</h1>

    <ul>
    {% for contact in contactRepository %}
        <li><a class="contact-link" href="{{ path('app_contact_show', {id: contact.id}) }}"><span class="lastname">{{ contact.lastname }}</span>, <span class="firstname">{{ contact.firstname }}</span></a></li>
    {% endfor %}
    </ul>

{% endblock %}
