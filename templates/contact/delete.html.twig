{% extends 'base.html.twig' %}
{% set title = 'Suppression de ' ~ contact.lastname ~ ', ' ~ contact.firstname %}
{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>
    <div class="d-flex">
        {{ form_start(form) }}
        {{ form_row(form.delete, {label: 'Supprimer', attr: {class: 'btn btn-primary'}}) }}
        {{ form_row(form.cancel, {label: 'Annuler', attr: {class: 'btn btn-secondary'}}) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
